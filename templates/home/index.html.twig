{% extends 'base.html.twig' %}

{% block title %}Page de remplissage{% endblock %}

{% block body %}
<section class="articles">

{% for article in articles %}
<article>
    <h2>{{ article.title }}</h2>
    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }}</div>
    <div class="content">
        <img src="{{ article.image}}" alt="">
        {{ article.content | raw }}
        <p>Placeat temporibus vero voluptatum, modi illo optio numquam natus nobis unde iure alias animi itaque!</p>
        <a href="{{ path('show')}}" class="btn btn-primary">Lire la suite</a>
    </div>
</article>
{% endfor %}

</section>

{% endblock %}
